---
import Layout from "../layouts/Layout.astro";
import NavbarMiradorDeLuz from "../components/react/NavbarMiradorDeLuz";
import FooterMiradorDeLuz from "../components/react/FooterMiradorDeLuz";

// Datos de contacto
const contactInfo = {
  whatsapp: "+54 9 3813 51 3513",
  email: "miradordeluz2019@gmail.com",
  phone: "+54 9 3813 51 3513",
  address: "Villa Santa Cruz del Lago, Córdoba, Argentina",
  whatsappLink: "https://wa.me/5493813513513",
  mapsLink:
    "https://www.google.com/maps/place/Mirador+de+Luz/@-31.3730543,-64.5250168,17z",
  instagram: "https://instagram.com/miradordeluz",
  facebook: "https://facebook.com/miradordeluz",
};

// Coordenadas para el embed de Google Maps
const mapCoords = {
  lat: -31.3730543,
  lng: -64.5224419,
};
---

<Layout
  title="Contacto - Mirador de Luz"
  description="Contacta con Mirador de Luz. Estamos aquí para ayudarte a planificar tu estadía perfecta en Villa Santa Cruz del Lago, Córdoba."
>
  <!-- Navbar (Copiamos el estilo de la galería con fondo sólido) -->
  <NavbarMiradorDeLuz client:load variant="solid-navy" />

  <main>
    <section class="relative bg-gray-50 text-slate-900 pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden">
      <!-- Patrón de fondo decorativo sutil -->
      <div class="absolute inset-0 opacity-40">
        <div
          class="absolute inset-0"
          style="background-image: radial-gradient(circle at 25% 25%, rgba(245, 158, 11, 0.15) 0%, transparent 50%), radial-gradient(circle at 75% 75%, rgba(217, 119, 6, 0.1) 0%, transparent 50%);"
        >
        </div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <!-- Botón Volver -->
        <div class="mb-4 md:mb-6">
          <a
            href="/"
            class="inline-flex items-center gap-2 py-2 rounded-full text-sm font-semibold text-slate-500 hover:text-slate-900 hover:bg-slate-200/50 transition-all px-3 bg-white/50 backdrop-blur-sm shadow-sm border border-gray-100"
            aria-label="Volver al inicio"
          >
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span>Volver al inicio</span>
          </a>
        </div>

        <!-- Título y Subtítulo Centrados (Fuera del Grid) -->
        <div class="text-center max-w-4xl mx-auto mb-16 md:mb-24">
          <span
            class="font-montserrat text-amber-600 text-sm uppercase tracking-[0.3em] font-semibold mb-4 block"
          >
            Mirador de Luz
          </span>
          <h1
            class="font-montserrat text-4xl md:text-6xl font-extrabold mb-6 -tracking-[1px] leading-tight text-slate-900"
          >
            Planificá tu Estadía
          </h1>
          <p
            class="font-montserrat text-lg md:text-xl text-slate-600 max-w-2xl mx-auto leading-relaxed mb-4"
          >
            ¿Tienes alguna pregunta? Estamos aquí para ayudarte a planificar tu
            estadía perfecta.
          </p>
          <div class="w-12 h-1 bg-amber-500 mx-auto rounded-full mb-8"></div>
          <h2 class="font-montserrat text-2xl md:text-3xl font-bold text-slate-800 tracking-tight">
            Escribinos...
          </h2>
        </div>

        <!-- Contenido en 2 Columnas -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-y-20 lg:gap-24 items-start">
          <!-- Columna Izquierda: Contact Info -->
          <div class="space-y-8 md:space-y-12">
            <div class="space-y-8">
              <!-- WhatsApp -->
              <div class="flex items-center gap-5 group">
                <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 group-hover:bg-orange-600 group-hover:text-white transition-all duration-300 shadow-sm shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                  </svg>
                </div>
                <div>
                  <p class="text-slate-900 font-bold text-lg">{contactInfo.whatsapp}</p>
                  <a href={contactInfo.whatsappLink} target="_blank" class="text-amber-600 hover:text-amber-700 text-sm font-medium transition-colors">Enviar WhatsApp</a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-center gap-5 group">
                <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 group-hover:bg-orange-600 group-hover:text-white transition-all duration-300 shadow-sm shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-slate-900 font-bold text-lg">{contactInfo.email}</p>
                  <a href={`mailto:${contactInfo.email}`} class="text-amber-600 hover:text-amber-700 text-sm font-medium transition-colors">Enviar un correo electrónico</a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-center gap-5 group">
                <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 group-hover:bg-orange-600 group-hover:text-white transition-all duration-300 shadow-sm shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-slate-900 font-bold text-lg">{contactInfo.phone}</p>
                  <p class="text-slate-500 text-sm">Atención telefónica 9:00 - 21:00</p>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-center gap-5 group">
                <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 group-hover:bg-orange-600 group-hover:text-white transition-all duration-300 shadow-sm shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-slate-900 font-bold text-lg">Villa Santa Cruz del Lago</p>
                  <p class="text-slate-500 text-sm">Valle de Punilla, Córdoba</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Columna Derecha: Contact Form -->
          <div
            class="bg-white p-8 md:p-10 rounded-[24px] shadow-2xl border border-gray-100/50"
          >
            <h2
              class="font-montserrat text-3xl font-semibold mb-8 text-slate-900 tracking-tight"
            >
              Envíanos un mensaje
            </h2>

            <form class="space-y-5">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                  <label for="nombre" class="font-montserrat block text-xs font-extrabold text-slate-500 uppercase tracking-widest mb-2 px-1">Nombre completo</label>
                  <input
                    type="text"
                    id="nombre"
                    name="nombre"
                    required
                    class="font-montserrat w-full px-4 py-3 bg-gray-50/50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all outline-none"
                    placeholder="Tu nombre"
                  />
                </div>
                <div>
                  <label for="email" class="font-montserrat block text-xs font-extrabold text-slate-500 uppercase tracking-widest mb-2 px-1">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="font-montserrat w-full px-4 py-3 bg-gray-50/50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all outline-none"
                    placeholder="tu@email.com"
                  />
                </div>
              </div>

              <div>
                <label for="asunto" class="font-montserrat block text-xs font-extrabold text-slate-500 uppercase tracking-widest mb-2 px-1">Asunto</label>
                <select
                  id="asunto"
                  name="asunto"
                  required
                  class="font-montserrat w-full px-4 py-3 bg-gray-50/50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all outline-none"
                >
                  <option value="">Selecciona una opción</option>
                  <option value="consulta">Consulta general</option>
                  <option value="reserva">Información sobre reserva</option>
                  <option value="disponibilidad">Consultar disponibilidad</option>
                  <option value="otro">Otro</option>
                </select>
              </div>

              <div>
                <label for="mensaje" class="font-montserrat block text-xs font-extrabold text-slate-500 uppercase tracking-widest mb-2 px-1">Mensaje</label>
                <textarea
                  id="mensaje"
                  name="mensaje"
                  rows="4"
                  required
                  class="font-montserrat w-full px-4 py-3 bg-gray-50/50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all outline-none resize-none"
                  placeholder="¿En qué te podemos ayudar?"></textarea>
              </div>

              <button
                type="submit"
                class="font-montserrat w-full bg-gradient-to-r from-orange-500 to-amber-500 hover:from-orange-600 hover:to-amber-600 text-white px-8 py-4 rounded-xl font-bold text-sm uppercase tracking-[0.2em] transition-all shadow-lg shadow-orange-500/20 hover:shadow-orange-500/40 hover:-translate-y-1 transform"
              >
                ENVIAR MENSAJE
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="pb-16 md:pb-24 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <span
            class="font-montserrat text-amber-600 text-sm uppercase tracking-[0.2em] font-semibold mb-3 block"
          >
            Encuéntranos
          </span>
          <h2
            class="font-montserrat text-3xl md:text-5xl font-semibold text-slate-900 tracking-tight"
          >
            Nuestra Ubicación
          </h2>
        </div>

        <!-- Google Maps -->
        <div
          class="rounded-3xl overflow-hidden shadow-2xl border border-white relative bg-white"
        >
          <iframe
            src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13619.6!2d${mapCoords.lng}!3d${mapCoords.lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x942d65f0c8772fbd%3A0x4d7f1d8348462d0a!2sMirador%20de%20Luz!5e0!3m2!1ses!2sar!4v1702000000000!5m2!1ses!2sar`}
            class="w-full h-[450px] md:h-[500px]"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            title="Ubicación de Mirador de Luz en Google Maps"
          ></iframe>
        </div>

        <div class="text-center mt-12">
          <a
            href={contactInfo.mapsLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 bg-white hover:bg-slate-900 text-slate-900 hover:text-white border border-slate-200 px-8 py-4 rounded-full font-bold transition-all duration-300 transform hover:scale-105 shadow-sm"
          >
            Abrir en Google Maps
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer consistente con el resto del sitio -->
  <FooterMiradorDeLuz client:load />
</Layout>
