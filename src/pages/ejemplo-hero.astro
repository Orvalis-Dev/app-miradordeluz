---
// Ejemplo de uso del componente HeroMiradorDeLuz
import Layout from "../layouts/Layout.astro";
import HeroMiradorDeLuz from "../components/react/HeroMiradorDeLuz";
---

<Layout
  title="Hero Mirador de Luz - Ejemplo"
  description="Ejemplo del componente Hero para Mirador de Luz"
>
  <!-- Uso básico con valores por defecto -->
  <HeroMiradorDeLuz client:load />

  <!-- O con props personalizadas: -->
  <!--
  <HeroMiradorDeLuz 
    client:load
    titulo="MIRADOR DE LUZ"
    subtitulo="COMPLEJO DE CABAÑAS"
    descripcion="Descansá entre la naturaleza y la luz del amanecer"
    imagenFondo="https://images.unsplash.com/photo-1542718610-a1d656d1884c?w=1920"
  />
  -->

  <!-- Sección adicional de ejemplo -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">
        Contenido adicional debajo del Hero
      </h2>
      <p class="text-center text-gray-600 max-w-2xl mx-auto">
        El hero ocupa el 100% de la ventana. Al hacer scroll, aparece el resto
        del contenido.
      </p>
    </div>
  </section>
</Layout>
