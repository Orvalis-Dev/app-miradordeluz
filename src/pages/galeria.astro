---
import Layout from "../layouts/Layout.astro";
import NavbarMiradorDeLuz from "../components/react/NavbarMiradorDeLuz";
import Gallery from "../components/react/Gallery/Gallery";
import FooterMiradorDeLuz from "../components/react/FooterMiradorDeLuz";
---

<Layout
  title="Galería - Mirador de Luz"
  description="Explorá nuestras cabañas, instalaciones y espacios del complejo Mirador de Luz en Villa Carlos Paz."
>
  <!-- Navbar fijo con fondo sólido -->
  <NavbarMiradorDeLuz client:load variant="solid-navy" />

  <main class="bg-gray-50 pt-24 pb-16 md:pt-32 md:pb-24 overflow-hidden">
    <div class="container mx-auto px-4 relative z-10">
      <!-- Botón Volver -->
      <div class="mb-4 md:mb-6">
        <a
          href="/"
          class="inline-flex items-center gap-2 py-2 rounded-full text-sm font-semibold text-slate-500 hover:text-slate-900 hover:bg-slate-200/50 transition-all px-3 bg-white/50 backdrop-blur-sm shadow-sm border border-gray-100"
          aria-label="Volver al inicio"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <span>Volver al inicio</span>
        </a>
      </div>

      <!-- Título y Subtítulo Centrados -->
      <div class="text-center max-w-4xl mx-auto mb-12 md:mb-16">
        <span
          class="font-montserrat text-amber-600 text-sm uppercase tracking-[0.3em] font-semibold mb-4 block"
        >
          Mirador de Luz
        </span>
        <h1
          class="font-montserrat text-4xl md:text-5xl font-extrabold mb-6 -tracking-[1px] leading-tight text-slate-900"
        >
          Galería de Fotos
        </h1>
        <p
          class="font-montserrat text-lg md:text-xl text-slate-600 max-w-2xl mx-auto leading-relaxed"
        >
          Un recorrido visual por la esencia de Mirador de Luz.
        </p>
        <div class="w-12 h-1 bg-amber-500 mx-auto rounded-full mt-8"></div>
      </div>

      <!-- Componente de galería -->
      <Gallery client:load />
    </div>
  </main>

  <!-- Footer -->
  <FooterMiradorDeLuz client:load />
</Layout>

<style>
  /* Sin estilos adicionales necesarios, usando Tailwind y componentes consistentes */
</style>
